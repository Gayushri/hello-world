pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Gayushri/terraform.git'
            }
        }
    
        stage ("terraform init") {
            steps {
                sh ("terraform init") 
            }
        }
        stage ("plan") {
            steps {
                sh ('terraform plan') 
            }
        }

        stage (" Action") {
            steps {
            sh ('terraform apply --auto-approve') 
           }
        }
         stage (" Deploy") {
            steps {
        ansiblePlaybook credentialsId: 'Ansible-key', disableHostKeyChecking: true, installation: 'Ansible', inventory: 'public_ip.txt', playbook: 'play.yml'
        }
      }
    }
}
