pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dynamic', url: 'https://github.com/Gayushri/hello-world.git'
            }
        }
    
        stage ("terraform init") {
            steps {
                sh ("terraform init") 
            }
        }
        
        stage ("plan") {
            steps {
                sh ('terraform plan') 
            }
        }

        stage (" Action") {
            steps {
            sh ('terraform apply --auto-approve')
            sleep time: 30, unit: 'SECONDS'
           }
        }
        
         stage (" Deploy") {
            steps {
        ansiblePlaybook credentialsId: 'Ansible-key', disableHostKeyChecking: true, installation: 'Ansible', inventory: '/etc/ansible/hosts', playbook: 'play.yml'
        }
      }
    }
